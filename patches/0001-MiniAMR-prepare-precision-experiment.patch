diff --git a/ref/driver.c b/ref/driver.c
index 95b15ed..bcbd550 100644
--- a/ref/driver.c
+++ b/ref/driver.c
@@ -33,9 +33,17 @@
 #include "timer.h"
 #include "proto.h"
 
+#include <ittnotify.h>
+#include <signal.h>
+#include <unistd.h>
+#define STARTSDE {if(!my_pe && getenv("PCMPID")) kill(atoi(getenv("PCMPID")),SIGUSR1); __itt_resume(); __SSC_MARK(0x111);}
+#define STOPSDE {__SSC_MARK(0x222); __itt_pause(); if(!my_pe && getenv("PCMPID")) kill(atoi(getenv("PCMPID")), SIGUSR1);}
+
 // Main driver for program.
 void driver(void)
 {
+double mkrts, mkrte; // my kernel run-time
+
    int ts, var, start, number, stage, comm_stage, calc_stage, done;
    double t1, t2, t3, t4;
    double sum, delta = 1.0, sim_time;
@@ -59,6 +67,8 @@ void driver(void)
    nb_min = nb_max = global_active;
 
    if (use_time) delta = calc_time_step();
+mkrts = MPI_Wtime();
+STARTSDE;
    for (sim_time = 0.0, done = comm_stage =calc_stage=0, ts = 1; !done; ts++) {
       for (stage=0; stage < stages_per_ts; stage++,comm_stage++,calc_stage++) {
          total_blocks += global_active;
@@ -122,6 +132,9 @@ void driver(void)
          if (ts >= num_tsteps)
             done = 1;
    }
+STOPSDE;
+mkrte = MPI_Wtime();
+if (!my_pe) printf("Walltime of the main kernel: %.6lf sec\n", mkrte - mkrts);
 
    end_time = sim_time;
    num_tsteps = ts - 1;
diff --git a/ref/main.c b/ref/main.c
index 034e300..6e9bd71 100644
--- a/ref/main.c
+++ b/ref/main.c
@@ -34,6 +34,12 @@
 #include "timer.h"
 #include "proto.h"
 
+#include <ittnotify.h>
+#include <signal.h>
+#include <unistd.h>
+#define STARTSDE {if(!my_pe && getenv("PCMPID")) kill(atoi(getenv("PCMPID")),SIGUSR1); __itt_resume(); __SSC_MARK(0x111);}
+#define STOPSDE {__SSC_MARK(0x222); __itt_pause(); if(!my_pe && getenv("PCMPID")) kill(atoi(getenv("PCMPID")), SIGUSR1);}
+
 int main(int argc, char** argv)
 {
    int i, ierr, object_num;
@@ -45,6 +51,7 @@ int main(int argc, char** argv)
    ierr = MPI_Errhandler_set(MPI_COMM_WORLD, MPI_ERRORS_ARE_FATAL);
    ierr = MPI_Comm_rank(MPI_COMM_WORLD, &my_pe);
    ierr = MPI_Comm_size(MPI_COMM_WORLD, &num_pes);
+STOPSDE;
 
    counter_malloc = 0;
    size_malloc = 0.0;
@@ -305,6 +312,7 @@ int main(int argc, char** argv)
 
    MPI_Finalize();
 
+STARTSDE;
    exit(0);
 }
 
