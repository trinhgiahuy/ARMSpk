@@ -4,8 +4,14 @@
 #include<mpi.h>
 #endif
 
+#define STARTSDE __SSC_MARK(0x111);
+#define STOPSDE __SSC_MARK(0x222);
+
 int main( int argc, char* argv[] )
 {
+double mkrts, mkrte; // my kernel run-time
+STOPSDE;
+
 	// =====================================================================
 	// Initialization & Command Line Read-In
