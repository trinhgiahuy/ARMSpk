 	// OpenMP compiler directives - declaring variables as shared or private
 	#pragma omp parallel default(none) \
 	private(i, thread, p_energy, mat, seed) \
@@ -244,6 +254,10 @@ int main( int argc, char* argv[] )
 
 	}
 
