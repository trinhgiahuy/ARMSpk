diff -Nur --no-dereference MODYLAS.old/src/ssc.c MODYLAS.new/src/ssc.c
--- MODYLAS.old/src/ssc.c	1970-01-01 09:00:00.000000000 +0900
+++ MODYLAS.new/src/ssc.c	2018-05-15 19:00:52.586779456 +0900
@@ -0,0 +1,14 @@
+#include <ittnotify.h>
+#include <signal.h>
+#include <unistd.h>
+#define STARTSDE {if(!myid && getenv("PCMPID")) kill(atoi(getenv("PCMPID")),SIGUSR1); __itt_resume(); __SSC_MARK(0x111);}
+#define STOPSDE {__SSC_MARK(0x222); __itt_pause(); if(!myid && getenv("PCMPID")) kill(atoi(getenv("PCMPID")), SIGUSR1);}
+
+int ssc_mark_start (int myid) {
+	STARTSDE;
+	return (myid << 0x1);
+}
+int ssc_mark_stop (int myid) {
+	STOPSDE;
+	return (myid >> 0x2);
+}
