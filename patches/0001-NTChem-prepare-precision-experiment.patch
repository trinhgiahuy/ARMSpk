@@ -6,11 +6,25 @@
 !
 !     o Main MP2 routine
 !
+      use, intrinsic :: iso_c_binding
       IMPLICIT NONE
+      interface
+      integer(4) function SSC_MARK_START ( i ) bind ( c )
+      integer(4) :: i
+      !!!DEC$ ATTRIBUTES C:: SSC_MARK_START
+      end function
+      integer(4) function SSC_MARK_STOP ( j ) bind ( c )
+      integer(4) :: j
+      !!!DEC$ ATTRIBUTES C:: SSC_MARK_STOP
+      end function
+      end interface
 !
       INCLUDE "mpif.h"
 !
       REAL(8) :: TimeBgn, TimeEnd, WTimeBgn, WTimeEnd
+      real(8) :: mkrts, mkrte
+      integer(4) :: sscfake = 1
+      sscfake = SSC_MARK_STOP(sscfake)
 !
 !     o Initialize MPI
 !
@@ -67,6 +81,8 @@
       END IF
       WTimeBgn = MPI_WTIME()
       CALL CPU_TIME(TimeBgn)
+      mkrts = MPI_WTIME()
+      sscfake = SSC_MARK_START(sscfake)
       IF (InCore) THEN
 !
 !        o In-Core RI-MP2 algorithm
@@ -80,6 +96,11 @@
          CALL RIMP2_Driver_SemiDirect_MPIOMP
 !
       END IF
+      sscfake = SSC_MARK_STOP(sscfake)
